<div class="rb-sitemap">

	<div class="sitemap-inner">
		<ul class="sitemap-group is-column-group is-gutters-horizontal">
			{{#each boxes}}
				<li class="sitemap-box is-size-{{ size }}">
					{{#if header}}
						{{#if header.link}}
							<h3><a href="{{ header.link }}">{{ header.title }}</a></h3>
						{{else}}
							<h3>{{ header.title }}</h3>
						{{/if}}
					{{/if}}
					{{#if items }}
						<ul class="sitemap-list">
							{{#each items }}
								<li class="sitemap-item">
									<a href="{{ link }}" class="sitemap-link">{{ title }}</a>
								</li>
							{{/each}}
						</ul>
					{{/if}}
				</li>
			{{/each}}
		</ul>
	</div>
</div>